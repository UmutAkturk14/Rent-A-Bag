<% @bookings.each do |booking| %>
<div class="container my-3">
  <div class="card-product mb-3">
    <%= cl_image_tag(booking.offer.photos.first.key, height: 200, width: 300, class:"card-img-top")%>
    <div class="card-product-infos">
    <h5><%= booking.offer.title %></h5>
    <p><strong>Start Date: </strong><%= booking.start_date %></p>
    <p><strong>End Date: </strong><%= booking.end_date %></p>
    <p><strong>Paid By: </strong><%= booking.payment_method.title %></p>
    <p><strong>Owner: </strong><%= link_to "#{booking.offer.user.first_name} #{booking.offer.user.last_name}", profile_path(booking.offer.user) %></p>
    <div class="buttons my-1">
      <%= link_to "Cancel this booking", booking_path(booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?" }, class: "btn btn-sm rounded-pill btn-booking", style: "background-color: #FFC26F;" %>
      <%= link_to "Send a message to the owner", "#", class: "btn btn-sm rounded-pill btn-booking", style: "background-color: #FFC26F;" %>
    </div>
  </div>
</div>

</div>
<% end %></h2>
