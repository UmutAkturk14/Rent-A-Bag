<div class="container">
  <div class="d-flex flex-wrap justify-content-between">
    <% @offers.each do |offer| %>
      <div class="card rounded-4 overflow-hidden mb-3" style="width: 15rem">
        <%= cl_image_tag(offer.photos.first.key, height: 200, width: 300, class:"card-img-top")%>
        <div class="card-body d-flex flex-column justify-content-between">
          <p class="card-text text-truncate"><%= offer.title %></p>
          <p class="card-text"><%= offer.brand %></p>
        <a href=<%= offer_path(offer) %> class="btn btn-primary">+</a>
        </div>

      </div>
      <% end %>
  </div>
</div>
