<div class="container my-5">
  <%= render "shared/search"%>
  <div class="container">
    <p>Here to make an offer? <a href="/offers/new">Make an offer!</a></p>
  </div>
  <div class="d-flex flex-wrap justify-content-between" data-controller="offer-index" >
    <% @offers.each do |offer| %>
      <div class="card rounded-4 overflow-hidden mb-3 border-0" style="width: 15rem" data-action="mouseenter->offer-index#hoverButton mouseleave->offer-index#hideButton">
        <%= cl_image_tag(offer.photos.first.key, height:160, width: 300, class:"card-img-top offer-img")%>
        <div class="card-body d-flex flex-column justify-content-between" style="height: 130px;">
          <div class="text-truncate text-center"><%= "#{offer.title} - #{offer.brand}" %></div>
        <%= link_to "Rent this bag", offer_path(offer), class: "text-truncate btn btn-booking w-100 d-none"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
