<div class="container">
  <%= simple_form_for [@offer] do |f| %>
    <%= f.input :title %>
    <%= f.input :brand %>
    <%= f.input :condition %>
    <%= f.input :price %>
    <%= f.input :city %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit %>
  <% end %>
</div>
